
<div
    class="p-5 text-center bg-image"
    style=" background-image: url('/assets/b3.jpg');
      height: 600px;
    "
  >

    <div class="mask" style="background-color: rgba(0, 0, 0, 0.6)">
      <div class="d-flex justify-content-center align-items-center h-100">
        <div class="text-white">
          <br/>
          <br/>
          <h1 class="mb-3">Reservations</h1>
          <br/>
<% if current_user && current_user.admin %>

 <table class="table table-striped table-hover text-white">
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>No.of.People</th>
      <th>Name</th>
      <th>Phone No</th>
      <th>Special Request(for table)</th>
      <th>User Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody >
    <% @bookings.each do |booking| %>

    
      <tr class="text-white">
        <td><%= booking.bdate %></td>
        <td><%= booking.btime %></td>
        <td><%= booking.people %></td>
        <td><%= booking.name %></td>
        <td><%= booking.phone %></td>
        <td><%= booking.detail %></td>
        <td><%= booking.user_id %></td>
        <td><%= link_to 'Show', booking ,class:"btn btn-outline-info" %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) ,class:"btn btn-outline-warning"%></td>
        <td><%= link_to 'Delete', booking, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-outline-danger"%></td>
      </tr>
      

    
    <% end %>


  </tbody>
 </table>

  <% elsif current_user %> 
    <table class="table table-striped table-hover text-white">
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>No.of.People</th>
